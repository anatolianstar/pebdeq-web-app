{
  "manifest_version": 3,
  "name": "PEBDEQ Multi-Platform Integration", 
  "version": "2.1.0",
  "description": "Seamless photo upload integration between PEBDEQ and desktop e-commerce platforms (Etsy, Shopify, eBay, Amazon, AliExpress, Walmart)",
  
  "permissions": [
    "nativeMessaging",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.etsy.com/*",
    "https://*.shopify.com/*",
    "https://*.myshopify.com/*",
    "https://*.ebay.com/*",
    "https://*.pebdeq.com/*",
    "https://*.amazon.com/*",
    "https://*.aliexpress.com/*",
    "https://*.walmart.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.etsy.com/*",
        "https://*.shopify.com/*", 
        "https://*.myshopify.com/*",
        "https://*.ebay.com/*",
        "https://*.pebdeq.com/*",
        "https://*.amazon.com/*",
        "https://*.aliexpress.com/*",
        "https://*.walmart.com/*"
      ],
      "js": ["content.js"],
      "css": ["multi-platform-integration.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PEBDEQ Multi-Platform Integration"
  },
  
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["multi-platform-integration.css"],
      "matches": [
        "https://*.etsy.com/*",
        "https://*.shopify.com/*",
        "https://*.myshopify.com/*", 
        "https://*.ebay.com/*",
        "https://*.pebdeq.com/*",
        "https://*.amazon.com/*",
        "https://*.aliexpress.com/*",
        "https://*.walmart.com/*"
      ]
    }
  ]
}