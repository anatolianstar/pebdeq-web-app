# Production Environment Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Database
DATABASE_URL=sqlite:///instance/pebdeq.db

# Paths and Upload Configuration
UPLOAD_FOLDER=/var/www/pebdeq/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes (adjust as needed)

# Frontend URL
FRONTEND_URL=https://pebdeq.com

# Security (Bu değerleri production'da mutlaka değiştirin!)
SECRET_KEY=production-secret-key-change-this
JWT_SECRET_KEY=production-jwt-secret-change-this

