/* Base CSS Variables System */
/* This file defines the structure and default values for all theme variables */

:root {
  /* ========== COLOR PALETTE ========== */
  
  /* Primary Colors */
  --primary-color: #007bff;
  --primary-hover: #0056b3;
  --primary-active: #004085;
  --primary-light: #cce7ff;
  --primary-dark: #004085;
  
  /* Secondary Colors */
  --secondary-color: #6c757d;
  --secondary-hover: #545b62;
  --secondary-active: #3d4246;
  --secondary-light: #e9ecef;
  --secondary-dark: #495057;
  
  /* Status Colors */
  --success-color: #28a745;
  --success-hover: #218838;
  --success-active: #1e7e34;
  --success-light: #d4edda;
  --success-dark: #155724;
  
  --danger-color: #dc3545;
  --danger-hover: #c82333;
  --danger-active: #bd2130;
  --danger-light: #f8d7da;
  --danger-dark: #721c24;
  
  --warning-color: #ffc107;
  --warning-hover: #e0a800;
  --warning-active: #d39e00;
  --warning-light: #fff3cd;
  --warning-dark: #856404;
  
  --info-color: #17a2b8;
  --info-hover: #138496;
  --info-active: #117a8b;
  --info-light: #d1ecf1;
  --info-dark: #0c5460;
  
  /* ========== BACKGROUND COLORS ========== */
  
  /* Main Backgrounds */
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #e9ecef;
  --bg-dark: #343a40;
  --bg-light: #ffffff;
  
  /* Card Backgrounds */
  --card-bg: #ffffff;
  --card-bg-hover: #f8f9fa;
  --card-bg-active: #e9ecef;
  
  /* Modal Backgrounds */
  --modal-bg: #ffffff;
  --modal-backdrop: rgba(0, 0, 0, 0.5);
  
  /* Header/Footer Backgrounds */
  --header-bg: #ffffff;
  --footer-bg: #343a40;
  
  /* Input Backgrounds */
  --input-bg: #ffffff;
  --input-border: #ced4da;
  --input-focus: #80bdff;
  
  /* ========== TEXT COLORS ========== */
  
  /* Primary Text */
  --text-primary: #222222;
  --text-secondary: #6c757d;
  --text-muted: #999999;
  --text-light: #ffffff;
  --text-dark: #222222;
  
  /* Button Text Colors */
  --button-text: #ffffff;
  --button-text-secondary: #6c757d;
  
  /* Link Colors */
  --link-color: #007bff;
  --link-hover: #0056b3;
  --link-active: #004085;
  --link-visited: #6f42c1;
  
  /* Placeholder Text */
  --placeholder-color: #999999;
  
  /* ========== BORDER COLORS ========== */
  
  --border-color: #dee2e6;
  --border-color-light: #f8f9fa;
  --border-color-dark: #adb5bd;
  --border-color-focus: #007bff;
  --border-color-error: #dc3545;
  --border-color-success: #28a745;
  
  /* ========== SHADOWS ========== */
  
  --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
  --shadow-xl: 0 2rem 4rem rgba(0, 0, 0, 0.2);
  
  /* Component Specific Shadows */
  --card-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --card-shadow-hover: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  --header-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  --modal-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
  
  /* ========== SPACING ========== */
  
  /* Border Radius */
  --border-radius-sm: 0.125rem;
  --border-radius: 0.375rem;
  --border-radius-md: 0.5rem;
  --border-radius-lg: 0.75rem;
  --border-radius-xl: 1rem;
  --border-radius-pill: 50rem;
  
  /* Spacing Scale */
  --space-xs: 0.25rem;
  --space-sm: 0.5rem;
  --space-md: 1rem;
  --space-lg: 1.5rem;
  --space-xl: 2rem;
  --space-2xl: 3rem;
  --space-3xl: 4rem;
  
  /* Component Spacing */
  --button-padding-x: 0.75rem;
  --button-padding-y: 0.375rem;
  --button-padding-x-lg: 1rem;
  --button-padding-y-lg: 0.5rem;
  --button-padding-x-sm: 0.5rem;
  --button-padding-y-sm: 0.25rem;
  
  --input-padding-x: 0.75rem;
  --input-padding-y: 0.375rem;
  --input-padding-x-lg: 1rem;
  --input-padding-y-lg: 0.5rem;
  --input-padding-x-sm: 0.5rem;
  --input-padding-y-sm: 0.25rem;
  
  --card-padding: 1.5rem;
  --card-padding-sm: 1rem;
  --card-padding-lg: 2rem;
  
  /* ========== TYPOGRAPHY ========== */
  
  /* Font Families */
  --font-family-base: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --font-family-heading: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --font-family-monospace: 'SFMono-Regular', Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
  
  /* Font Sizes */
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-size-3xl: 1.875rem;
  --font-size-4xl: 2.25rem;
  --font-size-5xl: 3rem;
  
  /* Font Weights */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-extrabold: 800;
  
  /* Line Heights */
  --line-height-none: 1;
  --line-height-tight: 1.25;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.625;
  --line-height-loose: 2;
  
  /* Letter Spacing */
  --letter-spacing-tight: -0.025em;
  --letter-spacing-normal: 0;
  --letter-spacing-wide: 0.025em;
  
  /* ========== TRANSITIONS ========== */
  
  /* Transition Durations */
  --transition-fast: 0.1s;
  --transition-normal: 0.2s;
  --transition-slow: 0.3s;
  --transition-slower: 0.5s;
  
  /* Transition Easing */
  --ease-linear: linear;
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Combined Transitions */
  --transition-all: all var(--transition-normal) var(--ease-in-out);
  --transition-colors: color var(--transition-normal) var(--ease-in-out), background-color var(--transition-normal) var(--ease-in-out), border-color var(--transition-normal) var(--ease-in-out);
  --transition-opacity: opacity var(--transition-normal) var(--ease-in-out);
  --transition-transform: transform var(--transition-normal) var(--ease-in-out);
  
  /* ========== Z-INDEX SCALE ========== */
  
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
  --z-toast: 1080;
  
  /* ========== THEME TRANSITION ========== */
  
  /* Applied to all elements during theme changes */
  --theme-transition: background-color var(--transition-normal) var(--ease-in-out), 
                     color var(--transition-normal) var(--ease-in-out), 
                     border-color var(--transition-normal) var(--ease-in-out),
                     box-shadow var(--transition-normal) var(--ease-in-out);

  /* ========== SITE SETTINGS OVERRIDE VARIABLES ========== */
  /* These variables can be overridden by site settings */
  
  /* Header overrides */
  --header-bg-resolved: var(--header-bg-override, var(--header-bg));
  --header-text-resolved: var(--header-text-override, var(--text-primary));
  --header-border-resolved: var(--header-border-override, var(--border-color));
  
  /* Navigation overrides */
  --nav-link-color-resolved: var(--nav-link-color-override, var(--text-primary));
  --nav-link-hover-resolved: var(--nav-link-hover-override, var(--primary-color));
  --nav-link-active-resolved: var(--nav-link-active-override, var(--primary-active));
  
  /* Footer overrides */
  --footer-bg-resolved: var(--footer-bg-override, var(--footer-bg));
  --footer-text-resolved: var(--footer-text-override, var(--text-light));
  
  /* Homepage overrides */
  --homepage-bg-resolved: var(--homepage-bg-override, var(--bg-primary));
  --welcome-bg-resolved: var(--welcome-bg-override, var(--primary-color));
  --welcome-text-resolved: var(--welcome-text-override, var(--text-light));
  --welcome-button-resolved: var(--welcome-button-override, var(--primary-color));
  
  /* Products page overrides */
  --products-bg-resolved: var(--products-bg-override, var(--bg-primary));
  --products-title-resolved: var(--products-title-override, var(--text-primary));
  --products-subtitle-resolved: var(--products-subtitle-override, var(--text-secondary));
  --products-name-resolved: var(--products-name-override, var(--text-primary));
  --products-price-resolved: var(--products-price-override, var(--primary-color));
  --products-category-resolved: var(--products-category-override, var(--text-secondary));
  
  /* Product detail overrides */
  --product-detail-name-resolved: var(--product-detail-name-override, var(--text-primary));
  --product-detail-price-resolved: var(--product-detail-price-override, var(--primary-color));
  --product-detail-description-resolved: var(--product-detail-description-override, var(--text-primary));
}

/* ========== THEME TRANSITION CLASS ========== */
/* This class is applied to the body during theme changes for smooth transitions */
.theme-transitioning * {
  transition: var(--theme-transition) !important;
}

/* ========== PRINT STYLES ========== */
@media print {
  :root {
    --bg-primary: #ffffff;
    --bg-secondary: #ffffff;
    --text-primary: #000000;
    --text-secondary: #000000;
    --border-color: #000000;
    --shadow-sm: none;
    --shadow-md: none;
    --shadow-lg: none;
    --shadow-xl: none;
  }
}

/* ========== REDUCED MOTION ========== */
@media (prefers-reduced-motion: reduce) {
  :root {
    --transition-fast: 0ms;
    --transition-normal: 0ms;
    --transition-slow: 0ms;
    --transition-slower: 0ms;
    --theme-transition: none;
  }
}

/* ========== HIGH CONTRAST MODE ========== */
@media (prefers-contrast: high) {
  :root {
    --border-color: #000000;
    --text-primary: #000000;
    --text-secondary: #000000;
    --link-color: #0000ff;
    --link-hover: #0000ff;
  }
} 