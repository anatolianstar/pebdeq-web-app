/* Image Preview Modal Styles */
.image-preview-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
}

.image-preview-modal-content {
  position: relative;
  background: white;
  border-radius: 12px;
  max-width: 95vw;
  max-height: 95vh;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  animation: modal-appear 0.3s ease-out;
}

@keyframes modal-appear {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.image-preview-modal-close {
  position: absolute;
  top: 10px;
  right: 10px;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 24px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1001;
  transition: all 0.2s ease;
  color: #333;
  font-weight: bold;
}

.image-preview-modal-close:hover {
  background: rgba(255, 255, 255, 1);
  transform: scale(1.1);
}

.image-preview-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  min-height: 200px;
}

.image-preview-image {
  max-width: 100%;
  max-height: 90vh;
  object-fit: contain;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  width: auto;
  height: auto;
  min-width: 600px;
  min-height: 600px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .image-preview-modal-overlay {
    padding: 10px;
  }
  
  .image-preview-modal-content {
    max-width: 95vw;
    max-height: 95vh;
  }
  
  .image-preview-image {
    max-height: 85vh;
    min-width: 400px;
    min-height: 400px;
  }
  
  .image-preview-modal-close {
    top: 5px;
    right: 5px;
    width: 35px;
    height: 35px;
    font-size: 20px;
  }
}

/* Zoom cursor for images */
.product-image img {
  cursor: zoom-in;
}

/* Enhanced hover effect for product images */
.product-card.with-hover:hover .product-image img {
  transform: scale(1.15) !important;
  transition: transform 0.3s ease !important;
}

/* Image preview hover effect */
.image-preview-hover::before {
  content: "üîç";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8px 12px;
  border-radius: 6px;
  font-size: 18px;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 10;
  pointer-events: none;
}

.image-preview-hover:hover::before {
  opacity: 1;
}

/* Navigation Arrows */
.image-preview-nav-left,
.image-preview-nav-right {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 24px;
  cursor: pointer;
  z-index: 1002;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.image-preview-nav-left {
  left: 20px;
}

.image-preview-nav-right {
  right: 20px;
}

.image-preview-nav-left:hover,
.image-preview-nav-right:hover {
  background: rgba(0, 0, 0, 0.9);
  transform: translateY(-50%) scale(1.1);
}

/* Image Counter */
.image-preview-counter {
  position: absolute;
  bottom: 80px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
  z-index: 1002;
}

/* Thumbnail Navigation */
.image-preview-thumbnails {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10px;
  max-width: 80%;
  overflow-x: auto;
  padding: 10px;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 10px;
  z-index: 1002;
  scrollbar-width: thin;
  scrollbar-color: #00b894 rgba(0, 0, 0, 0.5);
}

.image-preview-thumbnails::-webkit-scrollbar {
  height: 6px;
}

.image-preview-thumbnails::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 3px;
}

.image-preview-thumbnails::-webkit-scrollbar-thumb {
  background: #00b894;
  border-radius: 3px;
}

.image-preview-thumbnails::-webkit-scrollbar-thumb:hover {
  background: #00a085;
}

.image-preview-thumbnail {
  width: 60px;
  height: 60px;
  object-fit: cover;
  border-radius: 8px;
  cursor: pointer;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  opacity: 0.7;
}

.image-preview-thumbnail:hover {
  opacity: 1;
  border-color: rgba(255, 255, 255, 0.8);
}

.image-preview-thumbnail.active {
  opacity: 1;
  border-color: #00b894;
  box-shadow: 0 0 10px rgba(0, 184, 148, 0.5);
}

/* Mobile responsive adjustments */
@media (max-width: 768px) {
  .image-preview-nav-left,
  .image-preview-nav-right {
    width: 40px;
    height: 40px;
    font-size: 20px;
  }
  
  .image-preview-nav-left {
    left: 10px;
  }
  
  .image-preview-nav-right {
    right: 10px;
  }
  
  .image-preview-counter {
    bottom: 120px;
    font-size: 12px;
    padding: 6px 12px;
  }
  
  .image-preview-thumbnails {
    bottom: 10px;
    max-width: 90%;
    padding: 5px;
  }
  
  .image-preview-thumbnail {
    width: 50px;
    height: 50px;
  }
} 