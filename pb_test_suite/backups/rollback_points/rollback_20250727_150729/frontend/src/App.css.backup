  max-height: 400px;
  border: 2px solid var(--border-color);
  border-radius: 12px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  overflow-y: auto;
  overflow-x: hidden;
  z-index: 9999 !important;
  position: absolute;
  background: var(--card-bg);
  top: 100%;
  right: 0;
}

.admin-theme-selector .theme-selector__option {
  padding: 1rem 1.25rem;
  border-bottom: 1px solid var(--border-light);
}

.admin-theme-selector .theme-selector__option:hover {
