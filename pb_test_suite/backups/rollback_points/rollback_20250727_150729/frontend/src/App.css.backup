@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');

/* Import theme variables */
@import './themes/variables.css';

/* Reset and base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Global high-quality image rendering */
img, canvas {
  /* High quality rendering for photos and graphics */
  image-rendering: high-quality;
  /* IE fallback for smooth scaling */
  -ms-interpolation-mode: bicubic;
}

/* Specific optimization for pixel art and icons */
.pixel-art, .icon-crisp {
  /* Modern browsers - prevents smoothing for pixel-perfect rendering */
  image-rendering: pixelated;
}

/* Fallback for older browsers that don't support pixelated */
@supports not (image-rendering: pixelated) {
  .pixel-art, .icon-crisp {
    image-rendering: crisp-edges;
  }
}

body {
  font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  line-height: 1.6;
  color: var(--text-primary);
  background: var(--bg-primary);
}

.App {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

main {
  flex: 1;
  padding: 0;
  max-width: 100%;
  margin: 0;
  width: 100%;
}

/* Header styles */
.header {
  /* background and color now controlled by admin settings */
  padding: 0;
  min-height: 50px;
  position: relative;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.header.sticky {
  position: sticky;
  top: 0;
}

/* Header theme selector styles */
.header-theme-selector {
  margin-left: 0.5rem;
  margin-right: 0.5rem;
}

.header-theme-selector .theme-selector__toggle {
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  min-width: auto;
  width: 2.5rem;
  height: 2.5rem;
  padding: 0;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.header-theme-selector .theme-selector__toggle:hover {
  background: var(--card-bg-hover);
  border-color: var(--primary-color);
  transform: translateY(-1px);
}

.header-theme-selector .theme-selector__dropdown {
  right: 0;
  left: auto;
  min-width: 250px;
}

/* Responsive adjustments for header theme selector */
@media (max-width: 768px) {
  .header-theme-selector .theme-selector__toggle {
    width: 2rem;
    height: 2rem;
    font-size: 0.875rem;
  }
  
  .header-theme-selector .theme-selector__dropdown {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    right: auto;
    width: 90vw;
    max-width: 280px;
  }
}

/* Marquee Banner */
.marquee-banner {
  width: 100%;
  min-height: 40px;
  max-height: 80px;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
  white-space: nowrap;
  cursor: default;
  justify-content: flex-start;
  flex-shrink: 0;
}

.marquee-banner.pause-on-hover:hover .marquee-content {
  animation-play-state: paused;
}

.marquee-content {
  display: flex;
  align-items: center;
  animation: marquee-scroll linear infinite;
  white-space: nowrap;
  width: max-content;
  position: relative;
}

.marquee-content span {
  padding: 0 20px;
  white-space: pre-wrap;
  flex-shrink: 0;
  line-height: 1.2;
}

.marquee-left {
  animation-name: marquee-scroll-left;
}

.marquee-right {
  animation-name: marquee-scroll-right;
}

@keyframes marquee-scroll-left {
  0% {
    transform: translateX(100vw);
  }
  100% {
    transform: translateX(-100%);
  }
}

@keyframes marquee-scroll-right {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* Header content container */
.header .container {
  padding: 0;
  display: flex;
  align-items: center;
  flex: 1;
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24px;
  width: 100%;
}

.logo {
  font-size: 1.8rem;
  font-weight: 700;
  /* color now controlled by admin settings */
  text-decoration: none;
  letter-spacing: 1px;
}

.logo-container {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-right: 20px;
}

.site-logo {
  object-fit: contain;
  width: auto;
  height: auto;
  max-width: 500px;
  max-height: 150px;
}

.nav {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.nav a {
  /* color now controlled by admin settings */
  text-decoration: none;
  /* font-weight and font-size now controlled by admin settings */
  transition: opacity 0.2s;
}

.nav a:hover {
  opacity: 0.8;
}

.nav-logout-btn {
  background: none;
  border: none;
  /* color, font-weight, and font-size now controlled by admin settings */
  cursor: pointer;
  transition: opacity 0.2s;
  font-family: inherit;
}

.nav-logout-btn:hover {
  opacity: 0.8;
}

/* Modern Hero Section */
.hero-modern {
  background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  color: white;
  padding: 80px 0;
  min-height: 500px;
  display: flex;
  align-items: center;
}

.hero-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
  width: 100%;
}

.hero-text {
  flex: 1;
  max-width: 500px;
}

.hero-text h1 {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  line-height: 1.1;
}

.hero-text p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.hero-logo {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px;
}

/* Featured Products */
.featured-products {
  background: #f8f9fa;
  padding: 80px 0;
}

.featured-products h2 {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 3rem;
  color: #2c3e50;
}

.products-grid-featured {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.product-card-featured {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s, box-shadow 0.3s;
}

.product-card-featured:hover {
  transform: translateY(-8px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
}

.product-image-placeholder {
  width: 100%;
  height: 200px;
  background: linear-gradient(135deg, #a8c8ec, #7fb3d3);
  border-radius: 12px 12px 0 0;
}

.product-card-featured h3 {
  font-size: 1.3rem;
  font-weight: 600;
  margin: 1.5rem 1.5rem 0.5rem 1.5rem;
  color: #2c3e50;
}

.product-card-featured p {
  margin: 0 1.5rem 1.5rem 1.5rem;
  color: #666;
}

/* About & Blog Section */
.about-blog-section {
  background: #2c3e50;
  color: white;
  padding: 80px 0;
}

.about-blog-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.about-section h2, .blog-section h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.about-section p {
  font-size: 1.1rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.blog-post-preview {
  display: flex;
  gap: 1rem;
  align-items: flex-start;
}

.blog-image-small {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #a8c8ec, #7fb3d3);
  border-radius: 8px;
  flex-shrink: 0;
}

.blog-content h4 {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.blog-date {
  color: #a8c8ec;
  font-size: 0.9rem;
  display: block;
  margin-bottom: 0.5rem;
}

/* Blog Posts Section */
.blog-posts-section {
  background: #f8f9fa;
  padding: 80px 0;
}

.blog-posts-section h2 {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 3rem;
  color: #2c3e50;
}

.blog-posts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.blog-card {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s;
}

.blog-card:hover {
  transform: translateY(-4px);
}

.blog-image-placeholder {
  width: 100%;
  height: 200px;
  background: linear-gradient(135deg, #a8c8ec, #7fb3d3);
}

.blog-card h3 {
  font-size: 1.3rem;
  font-weight: 600;
  margin: 1.5rem 1.5rem 0.5rem 1.5rem;
  color: #2c3e50;
}

.blog-card .blog-date {
  margin: 0 1.5rem 1.5rem 1.5rem;
  color: #666;
}

.blog-card-text {
  background: white;
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
}

.blog-card-text h3 {
  font-size: 1.3rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #2c3e50;
}

.blog-card-text p {
  color: #666;
  margin-bottom: 1.5rem;
}

/* Button styles */
.btn {
  background: #2c3e50;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: 600;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-block;
}

.btn:hover {
  background: #34495e;
  transform: translateY(-2px);
}

.btn-hero {
  background: #2c3e50;
  padding: 16px 32px;
  font-size: 1.1rem;
  border-radius: 10px;
}

.btn-small {
  padding: 8px 16px;
  font-size: 0.9rem;
}

.btn-outline {
  background: transparent;
  border: 2px solid white;
  color: white;
}

.btn-outline:hover {
  background: white;
  color: #2c3e50;
}

/* Footer styles */
.footer {
  background: #2c3e50;
  color: white;
  text-align: center;
  padding: 2rem 0;
  margin-top: auto;
}

.footer-content {
  display: flex;
  flex-direction: column;
  gap: 3rem;
  margin-bottom: 1.5rem;
}

.footer-section {
  min-width: 180px;
}

.footer-section h3, .footer-section h4 {
  margin-bottom: 0.7rem;
  font-weight: 700;
}

.footer-section ul {
  list-style: none;
  padding: 0;
}

.footer-section ul li {
  margin-bottom: 0.5rem;
}

.footer-section ul li a {
  color: #a8c8ec;
  text-decoration: none;
  transition: color 0.2s;
}

.footer-section ul li a:hover {
  color: #fff;
  text-decoration: underline;
}

.footer-bottom {
  margin-top: 1.2rem;
  font-size: 0.95rem;
  color: #bbb;
  border-top: 1px solid #34495e;
  padding-top: 1rem;
}

/* Social media icons */
.footer-social-icons {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.footer-social-icons a {
  color: inherit;
  text-decoration: none;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
}

.footer-social-icons a:hover {
  background-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.footer-social-icons a svg {
  width: 20px;
  height: 20px;
  fill: currentColor;
}

/* Specific social media brand colors on hover */
.footer-social-icons a[href*="instagram"]:hover {
  background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  color: white;
}

.footer-social-icons a[href*="facebook"]:hover {
  background-color: #1877f2;
  color: white;
}

.footer-social-icons a[href*="x.com"]:hover,
.footer-social-icons a[href*="twitter"]:hover {
  background-color: #000000;
  color: white;
}

.footer-social-icons a[href*="youtube"]:hover {
  background-color: #ff0000;
  color: white;
}

.footer-social-icons a[href*="linkedin"]:hover {
  background-color: #0077b5;
  color: white;
}

/* Footer layout sections */
.footer-social-section {
  text-align: center;
}

.footer-social-section .footer-section {
  margin-bottom: 2rem;
}

.footer-social-section .footer-social-icons {
  justify-content: center;
}

.footer-links-section {
  display: flex;
  justify-content: center;
  gap: 4rem;
  flex-wrap: wrap;
}

.footer-newsletter-section {
  text-align: center;
}

.footer-newsletter-section .footer-section {
  max-width: 500px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .footer-links-section {
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }
  
  .footer-content {
    gap: 2rem;
  }
  
  .footer-social-section .footer-section {
    margin-bottom: 1.5rem;
  }
}

/* Container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.products-container {
  max-width: 1400px;
  padding: 0 1rem;
}

/* Responsive */
@media (max-width: 900px) {
  .hero-content {
    flex-direction: column;
    text-align: center;
    gap: 2rem;
  }
  
  .hero-text h1 {
    font-size: 2.5rem;
  }
  
  .pebdeq-logo-image {
    width: 280px;
    height: 336px;
  }
  
  .about-blog-grid {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .nav {
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .header {
    padding: 0;
  }
  
  .header-content {
    padding: 0 16px;
  }

  .marquee-banner {
    min-height: 35px;
    max-height: 70px;
  }

  .marquee-content span {
    padding: 0 15px;
  }
}

@media (max-width: 600px) {
  .hero-modern {
    padding: 40px 0;
  }
  
  .hero-text h1 {
    font-size: 2rem;
  }
  
  .pebdeq-logo-image {
    width: 220px;
    height: 264px;
  }
  
  .featured-products h2, .blog-posts-section h2 {
    font-size: 2rem;
  }
  
  .header {
    padding: 0;
    min-height: 45px;
  }
  
  .header-content {
    padding: 0 12px;
  }

  .marquee-banner {
    min-height: 30px;
    max-height: 60px;
    font-size: 12px;
  }

  .marquee-content span {
    padding: 0 10px;
  }
  
  .nav {
    gap: 0.8rem;
  }
  
  .nav a {
    font-size: 0.9rem;
  }
  
  .logo {
    font-size: 1.5rem;
  }
  
  .site-logo {
    max-width: 300px;
    max-height: 80px;
  }
}

.fade-in {
  animation: fadeIn 0.7s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.pebdeq-logo-image {
  width: 350px;
  height: 420px;
  object-fit: contain;
  filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.3));
  transition: transform 0.3s ease, filter 0.3s ease;
}

.pebdeq-logo-image:hover {
  transform: scale(1.05);
  filter: drop-shadow(0 12px 32px rgba(0, 0, 0, 0.4));
}

/* Products Page Styles */
.products {
  padding: 2rem 0;
  min-height: 100vh;
}

.products-header {
  text-align: center;
  margin-bottom: 3rem;
}

.products-header h1 {
  font-size: 2.5rem;
  color: #2c3e50;
  margin-bottom: 1rem;
}

.products-header p {
  color: #7f8c8d;
  font-size: 1.1rem;
}

.products-controls {
  background: #f8f9fa;
  padding: 2rem;
  border-radius: 10px;
  margin-bottom: 3rem;
}

.search-section {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.search-input {
  flex: 1;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 1rem;
}

.search-btn {
  padding: 0.75rem 1.5rem;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1rem;
  transition: background 0.3s;
}

.search-btn:hover {
  background: #2980b9;
}

.filter-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.category-filters {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 0.5rem 1rem;
  background: white;
  border: 1px solid #ddd;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.3s;
}

.filter-btn:hover {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.filter-btn.active {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.sort-select {
  padding: 0.5rem 1rem;
  border: 1px solid #ddd;
  border-radius: 5px;
  background: white;
  font-size: 1rem;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(var(--products-per-row, 4), 1fr);
  gap: 1.5rem;
  max-width: 1400px;
  margin: 0 auto 3rem auto;
  padding: 0 1rem;
  justify-content: center;
}

.product-card {
  background: white;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.product-image {
  height: var(--image-size, 250px);
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.product-image img {
  width: 100% !important;
  height: 100% !important;
  object-fit: contain !important;
  padding: 10px !important;
}

.no-image {
  font-size: 3rem;
  color: #bdc3c7;
}

.featured-badge {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #e74c3c;
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 15px;
  font-size: 0.8rem;
  font-weight: bold;
}

.product-info {
  padding: 1.5rem;
}

.product-info h3 {
  color: #2c3e50;
  margin-bottom: 0.5rem;
  font-size: 1.2rem;
}

.product-category {
  color: #7f8c8d;
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

.product-price {
  margin-bottom: 1rem;
}

.current-price {
  font-size: 1.5rem;
  font-weight: bold;
  color: #27ae60;
}

.original-price {
  text-decoration: line-through;
  color: #7f8c8d;
  margin-left: 0.5rem;
}

.product-stock {
  margin-bottom: 1rem;
}

.in-stock {
  color: #27ae60;
  font-size: 0.9rem;
}

.out-of-stock {
  color: #e74c3c;
  font-size: 0.9rem;
}

.product-actions {
  display: flex;
  gap: 0.5rem;
}

.product-actions .btn {
  flex: 1;
  padding: 0.75rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background 0.3s;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-primary:hover {
  background: var(--primary-hover);
}

.btn-secondary {
  background: #95a5a6;
  color: white;
}

.btn-secondary:hover {
  background: #7f8c8d;
}

.btn-secondary:disabled {
  background: #bdc3c7;
  cursor: not-allowed;
}

.pagination {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin: 2rem 0;
}

.pagination-btn {
  padding: 0.5rem 1rem;
  border: 1px solid #ddd;
  background: white;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s;
}

.pagination-btn:hover {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.pagination-btn.active {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.results-info {
  text-align: center;
  color: #7f8c8d;
  margin-top: 2rem;
}

.loading, .error {
  text-align: center;
  padding: 3rem;
}

.loading h2, .error h2 {
  color: #2c3e50;
  margin-bottom: 1rem;
