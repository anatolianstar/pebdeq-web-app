  border-color: var(--primary-color);
  font-weight: 600;
}

.admin-theme-selector .theme-selector__section-header {
  background: var(--bg-tertiary);
  padding: 0.75rem 1.25rem;
  font-weight: 700;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
