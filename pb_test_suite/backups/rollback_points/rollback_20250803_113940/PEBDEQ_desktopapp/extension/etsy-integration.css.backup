/* PEBDEQ Etsy Integration Styles */

.pebdeq-integration-container {
  margin: 10px 0;
  padding: 12px;
  background: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  font-family: Arial, sans-serif;
}

.pebdeq-option {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 10px;
}

.pebdeq-checkbox {
  width: 16px;
  height: 16px;
  accent-color: #f56800;
}

.pebdeq-label {
  font-size: 14px;
  font-weight: 600;
  color: #f56800;
  cursor: pointer;
  user-select: none;
}

.pebdeq-photo-selector {
  transition: all 0.3s ease;
}

.pebdeq-photo-selector.hidden {
  display: none;
}

.pebdeq-photos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 12px;
  max-height: 300px;
  overflow-y: auto;
  padding: 10px;
  background: white;
  border-radius: 6px;
  border: 1px solid #dee2e6;
}

.pebdeq-photo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px;
  border: 2px solid transparent;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  background: #f8f9fa;
}

.pebdeq-photo:hover {
  border-color: #f56800;
  background: #fff5f0;
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(245, 104, 0, 0.1);
}

.pebdeq-photo img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 4px;
  border: 1px solid #dee2e6;
}

.pebdeq-photo-name {
  font-size: 11px;
  font-weight: 600;
  color: #333;
  margin-top: 4px;
  text-align: center;
  line-height: 1.2;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pebdeq-photo-info {
  font-size: 9px;
  color: #666;
  margin-top: 2px;
  text-align: center;
}

/* Floating PEBDEQ Button */
#pebdeq-float-button {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 9999;
}



/* Notifications */
.pebdeq-notification {
  position: fixed;
  top: 20px;
  right: 20px;
  padding: 12px 20px;
  border-radius: 6px;
  font-weight: 600;
  font-size: 14px;
  z-index: 10000;
  animation: slideIn 0.3s ease;
}

.pebdeq-notification.pebdeq-success {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.pebdeq-notification.pebdeq-error {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Responsive */
@media (max-width: 768px) {
  .pebdeq-photos-grid {
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 8px;
  }
  
  .pebdeq-photo img {
    width: 60px;
    height: 60px;
  }
  
  .pebdeq-integration-container {
    padding: 8px;
  }
}